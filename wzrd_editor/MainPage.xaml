<Page
    x:Class="wzrd_editor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:wzrd_editor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:Name="outer_stackpanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="821" Width="1438" Margin="0,0,0,0">



        <ColorPicker x:Name="colorPicker"
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Top" 
                     Margin="0,0,0,0" 
                     IsAlphaSliderVisible="False" 
                     ColorSpectrumComponents="HueSaturation" 
                     ColorSpectrumShape="Ring"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="500" Width="320">
            <CommandBar Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                <AppBarButton x:Name="texturePicker" Click="texturePicker_Click" Icon="OpenFile" Label="Texture"/>
                <AppBarButton x:Name="shaderPicker" Icon="OpenFile" Label="Shaders">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="pixelShaderPicker" Click="pixelShaderPicker_Click" Text="Pixel"></MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="vertexShaderPicker" Click="vertexShaderPicker_Click" Text="Vertex" ></MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton x:Name="build" Click="buildPSO_Click" Icon="Calculator" Label="Build"/>
                <CommandBar.SecondaryCommands>
                    <AppBarButton Icon="Edit" Label="Settings"/>
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <RelativePanel Margin="10">
                <TextBlock x:Name="position_x_label" Text="Position"/>
                <TextBox x:Name="position_x_value"
                         Text="hello" 
                         Width="50" 
                         RelativePanel.RightOf="position_x_label" 
                         RelativePanel.AlignRightWithPanel="True" 
                         HorizontalAlignment="Right"/>
                <Slider x:Name="slider_x" Minimum="-20" Maximum="20" Value="1"
                        RelativePanel.Below="position_x_value"
                        RelativePanel.AlignLeftWith="position_x_label"
                        RelativePanel.AlignRightWith="position_x_value"/>
            </RelativePanel>

            <Slider x:Name="slider_y" Minimum="-20" Maximum="20" Value="1"/>
            <Slider x:Name="slider_z" Minimum="-20" Maximum="20" Value="1"/>

            <Slider x:Name="slider_radius" Minimum="5" Maximum="15" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Value="5"/>
        </StackPanel>

        <SwapChainPanel x:Name="swapChainPanel" HorizontalAlignment="Left" Width="700" Margin="100,0,0,0" Height="700
                        " VerticalAlignment="Center" />
    </StackPanel>
</Page>
